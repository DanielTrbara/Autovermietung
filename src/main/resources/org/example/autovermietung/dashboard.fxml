<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>


<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.autovermietung.Controller.DashboardController"
            style="-fx-background-color: #0d0d0d;">

    <HBox spacing="40" alignment="center">

        <VBox style="-fx-background-color: #111; -fx-padding: 10;"
              prefWidth="380" prefHeight="240" spacing="10">

            <ImageView fitWidth="380"
                       style="-fx-background-radius: 20;">
                <fitHeight>160</fitHeight>
                    <Image url="@assets/Autos.png" />
            </ImageView>

            <Label text="Meine Autos" style="-fx-text-fill: white; -fx-font-size: 18;"/>
            <Label text="Verwalte deine Fahrzeuge." style="-fx-text-fill: #cccccc;"/>

            <Button text="Zur Garage"
                    fx:id="btnOpenGarage"
                    onAction="#handleOpenGarage"
                    style="-fx-background-color: #E04B24; -fx-text-fill: white; -fx-background-radius: 8;"/>
        </VBox>

    </HBox>

</AnchorPane>